<%= simple_form_for(@subject) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subject_image %>
    <%= f.input :subject_description %>
    <%= f.input :student_image %>
    <%= f.input :student_description %>
    <%= f.input :price %>
  </div>

  <%= f.simple_fields_for :topics do |t| %> 
   <%= render 'topic_fields', f: t %>
  <% end %>
  
  <%= link_to_add_fields "Add Topic", f, :topics %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
